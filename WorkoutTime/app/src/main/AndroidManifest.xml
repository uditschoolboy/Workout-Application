<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.workouttime">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_self_improvement_24px"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".CreateRitual"
            android:parentActivityName=".RitualActivity"
            android:theme="@style/MyTheme" />

        <activity
            android:name=".RitualActivity"
            android:theme="@style/MyTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditActivity"
            android:parentActivityName=".WorkoutList"
            android:theme="@style/MyTheme" />
        <activity
            android:name=".WorkoutList"
            android:parentActivityName=".RitualActivity"
            android:theme="@style/MyTheme" />
        <activity
            android:name=".TimerActivity"
            android:parentActivityName=".RitualActivity"
            android:theme="@style/MyTheme" />

    </application>

</manifest>